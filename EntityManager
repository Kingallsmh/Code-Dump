using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class EntityManager : MonoBehaviour
{
    public static EntityManager Instance;

    List<GameObject> entityList;

    private void Awake()
    {
        Instance = this;
    }

    // Use this for initialization
    void Start()
    {
        entityList = new List<GameObject>();
    }

    // Update is called once per frame
    void Update()
    {
        
    }

    void RemoveEntity(GameObject entity){
        entityList.Remove(entity);
        Destroy(entity);
    }

	/// <summary>
	/// Put the object into middle of square. Use to make sure after movement the
	/// object is where it should be.
	/// </summary>
	/// <param name="spot">Spot.</param>
	void StickToSpot(Vector3 spot)
	{
		spot.x = Mathf.Round(spot.x);
		spot.y = Mathf.Round(spot.y);
		spot.z = Mathf.Round(spot.z);
		Debug.Log("<color=\"green\">Coordinates: </color>" + spot);
	}
}
